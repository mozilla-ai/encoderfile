{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BuildConfig",
  "type": "object",
  "properties": {
    "model": {
      "$ref": "#/$defs/ModelConfig"
    }
  },
  "required": [
    "model"
  ],
  "$defs": {
    "ModelConfig": {
      "type": "object",
      "properties": {
        "model_config_path": {
          "type": [
            "string",
            "null"
          ]
        },
        "model_weights_path": {
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        },
        "path": {
          "type": [
            "string",
            "null"
          ]
        },
        "tokenizer_path": {
          "type": [
            "string",
            "null"
          ]
        },
        "type": {
          "$ref": "#/$defs/ModelType"
        }
      },
      "required": [
        "name",
        "type"
      ]
    },
    "ModelType": {
      "type": "string",
      "enum": [
        "embedding",
        "sequence_classification",
        "token_classification"
      ]
    }
  }
}